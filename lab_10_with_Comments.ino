void loop()
{
  
  // This section of loop reads from microphone detects over unders in signal and displays signal on lcd
  
  // if last read was over 0
  bool over = true;
  
  // count of over unders
  uint8_t over_under_count = 0;

  for (int ii = 0; ii < 16; ii++)
  {
    // make signal average out to zero by subtracting 348 (this number depends on voltage I experimentally determined this average)
    
    int i = analogRead(A0)- 348;
    
    
    // add 1 to over_under_count if over is not what it was last step
    over_under_count += uint8_t((i>0) ^ over);
    
    // find over
    over = (i>0);
    
    // write waveform to lcd display for this sample
    uint8_t b = byte(abs(i)/2);
    lcd.setCursor(ii, 0);
    lcd.write(max( min(b-8,6),0));
    lcd.setCursor(ii, 1);
    lcd.write(max( min(b,6),0));
    
  }
  
  
  
  // increment time variables
  
  t+=16;
  pin_drop_time+=1;
  
  
  // detect if there is a success (if freq is in range)
  if ((over_under_count > l_freq_bound[pin]) && (over_under_count < h_freq_bound[pin]))
  {
    // add 1 success
    scs += 1;
    
    // if scs > 10 unlock a pin
    if (scs > 10)
    {
      pin += 1;
      pin_drop_time = 0;
      scs = 0;
      
    }
  }
  
  // if enough time has passed since last pin unlock reset all pins
  if (pin_drop_time > 19)
  {
    pin = 0;
    pin_drop_time = 0;
    scs = 0;
    analogWrite(5,0);
    analogWrite(6,0);
  }
  
  // write keys to indicate how many pins have been unlocked
  for (int x = 13; x < 13 + pin; x++ )
  {
    lcd.setCursor(x, 0);
    lcd.write(byte(7));
  }
  
  // what to do if all pins have been unlocked
  if (pin == Locksn-1)
  {
    scs=0;
    pin = 0;
    lcd.write("I AM UNLOCKED");
    
    
    // start to spin the "ballerina"
    analogWrite(5,128+100);
    analogWrite(6,128-100);
    
    // open the lid
    for(angle = 90; angle < 180; angle++)
    {
      servo.write(angle);
      delay(15);
    }
    
    // this code was taken from Robson Couto it plays the doom theme
    for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {

      // calculates the duration of each note
      divider = pgm_read_word_near(melody+thisNote + 1);
      noteDuration=133;
      

      // we only play the note for 90% of the duration, leaving 10% as a pause
      tone(buzzer, pgm_read_word_near(melody+thisNote), noteDuration * 0.9);

      // Wait for the specief duration before playing the next note.
      delay(noteDuration);
      
      // stop the waveform generation before the next note.
      noTone(buzzer);
      servo.write(180);
    }
    
    // Stop spinning the ballerina
    analogWrite(5,0);
    analogWrite(6,0);
    
    // close the lid
    for(angle = 180; angle > 90; angle--)
    {
      servo.write(angle);
      delay(15);
    }
    
  }

